@model InfoPathServices.FormInformation

@{
    ViewBag.Title = "Template Scanner";
    Layout = "~/Views/Scanner/_ScannerLayout.cshtml";
}

@section Scripts{
    <script type="text/javascript">
        "use strict";

        $(function () {
            preparePageAsync()
            .done();
        });
    </script>
}

@section Styles{
    <style>
        td.statusOK {
            color: #F37029;
            font-weight: bold;
        }

        td.statusBad {
            color: #A30D11;
            font-weight: bold;
        }

        td.statusGood {
            color: #006838;
            font-weight: bold;
        }

        table.xsnInfo {
            border: 1px solid black;
            border-collapse: collapse;
            padding: 2px;
            border-spacing: 0px;
            padding-left: 8px;
            padding-right: 8px;
            width: 100%;
        }

            table.xsnInfo tr {
                border: 1px solid black;
            }

            table.xsnInfo th {
                border: 1px solid black;
                background-color: #B7D7F0;
                padding-left: 8px;
                padding-right: 8px;
            }

            table.xsnInfo td {
                border: 1px solid black;
                padding-left: 8px;
                padding-right: 8px;
            }

        table.dcProps {
            border: 1px solid black;
            border-collapse: collapse;
            border-spacing: 0px;
            width: 100%;
            padding-left: 8px;
            padding-right: 8px;
        }

            table.dcProps tr {
                border: 1px solid black;
            }

            table.dcProps th {
                border: 1px solid black;
                background-color: #B7D7F0;
                padding-left: 8px;
                padding-right: 8px;
            }

            table.dcProps td {
                border: 1px solid black;
                padding-left: 8px;
                padding-right: 8px;
            }

        div.indentDiv {
            width: 5%;
            display: inline-block;
            float: left;
        }

        div.tableDiv {
            width: 95%;
            display: inline-block;
            float: left;
        }

        div.sectionHeader {
            /*background-color: beige;*/
            margin-top: 20px;
        }

        table.FormLevels {
            border: none;
            border-spacing: 10px;
            border-collapse: separate;
            padding-left: 8px;
            padding-right: 8px;
        }

            table.FormLevels th {
                border: 1px solid black;
                background-color: #B7D7F0;
                padding-left: 8px;
                padding-right: 8px;
            }

            table.FormLevels td {
                border: 1px solid #B7D7F0;
                text-align: left;
                vertical-align: middle;
                padding-left: 8px;
                padding-right: 8px;
            }

            table.FormLevels ul {
                padding-left: 15px;
            }

        td.Warning {
            background: url('../../images/Warning.png') no-repeat scroll center center / 20px;
        }
        td.Error {
            background: url("../../images/error.png") no-repeat scroll center center / 20px;
        }
    </style>
}

<div id="form">
    <div id="formType">
        File location: @Model.XsnUrl
        <br />
    </div>
    @Html.Partial("Partials/_FormPropertiesInfo", Model.FormProperties)
    &nbsp;<br />&nbsp;<br />
    @Html.Partial("Partials/_DataConnectionsInfo", Model.DataConnections)
    &nbsp;<br />&nbsp;<br />
    @Html.Partial("Partials/_ViewInfo", Model.ViewInfos)
    &nbsp;<br />&nbsp;<br />
    @Html.Partial("Partials/_DllInfo", Model.DllInfos)
    &nbsp;<br />&nbsp;<br />
    @Html.Partial("Partials/_PromotedPropertiesInfo", Model.PromotedProperties)
    &nbsp;<br />&nbsp;<br />
    @Html.Partial("Partials/_DetailingResultsInfo", Model.DetailingResults)
    &nbsp;<br />&nbsp;<br />
    @Html.Partial("Partials/_FormLevelInfo", Model.FormLevel)
    &nbsp;<br />&nbsp;<br />
    @Html.Partial("Partials/_MigrationAnalysisInfo", Model.MigrationAnalysisInfos)
    <div id="footer"><br />&nbsp;<br /></div>
</div>
