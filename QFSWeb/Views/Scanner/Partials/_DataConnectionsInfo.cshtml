@model List<InfoPathServices.DataConnection>

<div id="formDataConnections">
    <div class="tableDiv">
        @if (Model.Count == 0)
        {
            <text>The form has no data connections.</text>
        }
        else
        {
            <table class="xsnInfo bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th width="60px">Query On Load</th>
                        <th width="60px">Default Submit</th>
                        <th>Connection Type</th>
                        <th width="60px">UDCX</th>
                        <th>Data Connection Properties</th>
                    </tr>
                </thead>
                <tfoot></tfoot>
                <tbody>
                    @foreach (var dc in Model)
                    {
                        <tr>
                            <td>@dc.Name</td>
                            <td align="center">
                                @if (dc.QueryOnLoad.HasValue && dc.QueryOnLoad.Value)
                                {
                                    <img src="/images/check-mark.png" />
                                }
                            </td>
                            <td align="center">
                                @if (dc.DefaultSubmit)
                                {
                                    <img src="/images/check-mark.png" />
                                }
                            </td>
                            <td>@dc.ConnectionType</td>
                            <td align="center">
                                @if (dc.Udcx)
                                {
                                    <img src="/images/check-mark.png" />
                                }
                            </td>
                            <td style="padding: 8px">
                                <div>
                                    <table class="dcProps">
                                        <tr>
                                            <th width="150px">Property</th>
                                            <th>Value</th>
                                        </tr>
                                        @foreach (var p in dc.DataConnectionProperties)
                                        {
                                            <tr>
                                                <td>@p.Name</td>
                                                <td>@p.Value</td>
                                            </tr>
                                        }
                                    </table>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>

