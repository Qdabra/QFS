@model List<InfoPathServices.QRulesInfo>

<div id="formQRulesInfos">
    <div class="tableDiv">
        @if (Model.Count == 0)
        {
            <text>The form does not contain qRules.</text>
        }
        else
        {
            <table class="xsnInfo bordered">
                <thead>
                    <tr>
                        <th>FormsViewer Supported</th>
                        <th>Name</th>
                        <th>Count</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var qr in @Model)
                    {
                        <tr>
                            @if (qr.FVSupported)
                            {
                                <td style="width: 0px;">
                                    <img src="~/images/Yes.png" style="width: 20px; height:20px; display:block; margin: auto;" />
                                </td>
                            }
                            else
                            {
                                <td style="width: 0px;">
                                    <img src="~/images/error.png" style="width: 20px; height:20px; display:block; margin: auto;" />
                                </td>
                            }
                            <td>@qr.Name</td>
                            <td>@qr.Count</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
