@using QFSWeb.Models
@model LocationAllowance
@{
    var isLicenseExist = Model != null;
}


<div class="col-md-12 clearfix marginb15">
    <h3 class="pull-left margin0">License</h3>
    <span class="pull-right">
        @if (!isLicenseExist)
        {
            <button type="button" id="btnAddLicense" class="btn btn-primary">Add License</button>
        }
        else
        {
            <button type="button" id="btnEditLicense" class="btn btn-primary">Edit License</button>
        }
    </span>
</div>

<div class="col-md-12">

    @if (isLicenseExist)
    {
        <table class="table table-responsive table-striped table-bordered">
            <thead>
                <tr>
                    <th>Monthy Opens</th>
                    <th>Expiration</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.MonthlyOpens</td>
                    <td>@Model.Expiration.Value.ToShortDateString()</td>
                </tr>
            </tbody>
        </table>
    }
    else
    {
        <h5 class="error-info text-center">
            No license exist for this location.
        </h5>
    }
</div>
