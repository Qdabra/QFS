@model List<QFSWeb.Models.AppInstance>
@if (Model != null)
{
    <div class="table-responsive">
        <table id="tblAppInstances" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>Actions</th>
                    <th>Name</th>
                    <th>Service Url</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var instance in Model)
                {
                    <tr data-instance-id="@instance.InstanceId">
                        <td>
                            <a href="javascript:void(0)" class="glyphicon glyphicon-remove deleteInstance"></a>
                            <a href="javascript:void(0);" class="glyphicon glyphicon-pencil editInstance pull-right"></a>
                        </td>
                        <td>@instance.InstanceName</td>
                        <td>@instance.ServiceURL</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div>There are no saved Instances.</div>
}
